{% if menu %}
<ul id="menu-menu-1" class="navbar-nav ml-auto">
  {% for item in menu %}
  <li class="{{ item.classes | join(' ') }} nav-item">
    <a class="nav-link" href="{{ item.link }}"
      {% if item.target %}target="{{ item.target }}"{%endif %}>
      {{ item.title }}
    </a>
    {% include 'partials/menu.twig' with {'menu': item.children} %}
  </li>
  {% endfor %}
</ul>
{% endif %}
